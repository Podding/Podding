source :rubygems

# Base app
gem 'rack'
gem 'sinatra', :require => 'sinatra/base'
gem 'sinatra-assetpack', :require => 'sinatra/assetpack'
gem 'sinatra-contrib'
gem 'thin'
gem 'shotgun'
gem 'builder'
gem 'w3c_validators'
gem 'json'

# Templating
gem 'redcarpet'
gem 'slim'
gem 'less'
gem 'therubyracer'

# Data
gem 'scrivener'

# Queue
gem 'sidekiq'
gem 'redis'

# Mail
gem 'pony'

# Debugging
group :development, :test do
  gem 'pry'
  gem 'pry-nav'
  gem 'mocha'
end
