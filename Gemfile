source 'https://rubygems.org'

# Base app
gem 'rack'
gem 'sinatra', :require => 'sinatra/base'
gem 'sinatra-assetpack', :require => 'sinatra/assetpack'
gem 'sinatra-contrib'
gem 'puma'
gem 'json'
gem 'settingslogic'

# Templating
gem 'redcarpet'
gem 'slim'
gem 'less'
gem 'therubyracer'
gem 'builder'

# Data
gem 'scrivener'

# Queue
gem 'sidekiq'
gem 'redis'

# Mail
gem 'pony'

# Debugging
group :development, :test do
  gem 'pry'
  gem 'pry-debugger'
  gem 'mocha'
  gem 'shotgun'
  gem 'w3c_validators'
end

# Localisation

gem 'i18n'

# CLI

gem 'thor'