source :rubygems

# Base app
gem 'rack'
gem 'sinatra', :require => 'sinatra/base'
gem 'sinatra-assetpack', :require => 'sinatra/assetpack'
gem 'sinatra-contrib'
gem 'thin'
gem 'shotgun'
gem 'builder'
gem 'w3c_validators'

# Templating
gem 'redcarpet'
gem 'slim'
gem 'less'
gem 'therubyracer'

# Data

gem 'scrivener'

# Debugging
group :development, :test do
  gem 'pry'
  gem 'pry-nav'
end
